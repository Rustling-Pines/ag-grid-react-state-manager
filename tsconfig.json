{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": []
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}